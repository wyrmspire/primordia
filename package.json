{
  "name": "primordia",
  "version": "1.0.0",
  "description": "API-driven development studio for Google Cloud",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "pm2-runtime start ecosystem.config.cjs",
    "dev:api": "node --require dotenv/config src/api/index.js",
    "dev:worker": "node --require dotenv/config src/worker/index.js",
    "dev": "concurrently \"npm:dev:*\"",
    "start:prod": "pm2-runtime start ecosystem.config.cjs"
  },
  "dependencies": {
    "@google-cloud/cloudbuild": "^4.1.0",
    "@google-cloud/firestore": "^7.3.0",
    "@google-cloud/logging": "^11.0.0",
    "@google-cloud/pubsub": "^5.2.0",
    "@google-cloud/storage": "^7.7.0",
    "archiver": "^7.0.0",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "pm2": "^6.0.13",
    "vm2": "^3.9.19"
  }
}
