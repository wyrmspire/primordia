#!/usr/bin/env bash
# one-button chain runner; no tests/smoke â€” just bring it up
set -euo pipefail
echo "[startl] core"
./start-core

echo "[startl] firestore"
./start-firestore

echo "[startl] pubsub seed"
./seed-pubsub || true

echo "[startl] brief wait (firestore warm-up)"
sleep 3

echo "[startl] status"
./status || true
echo "[startl] done"
